<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avip_fragment_layout"
    android:background="@drawable/dark_trans_bg">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/avip_fragment_background" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/avip_fragment_container"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avip_fragment_weather_container"
            android:layout_gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avip_fragment_weather_icon" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/avip_fragment_sub_container"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avip_line_1"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="LINE 1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avip_line_2"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="LINE 2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avip_line_3"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="LINE 3" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>